<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.task1.view.RegistrationFragment1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Name" />

            <EditText
                android:id="@+id/name_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name" />


            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Email" />

            <EditText
                android:id="@+id/email_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email" />

            <TextView
                android:id="@+id/mobile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Mobile" />

            <EditText
                android:id="@+id/mobile_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile"
                android:inputType="phone" />


            <TextView
                android:id="@+id/country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Country" />

            <EditText
                android:id="@+id/country_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Country" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/saveinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Save" />

            <Button
                android:id="@+id/cancelinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Cancel" />


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>